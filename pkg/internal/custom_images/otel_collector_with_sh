# Otel-collector image with sh.
# Built with `docker build -t <account_name>/otel_collector_with_sh -f pkg/internal/custom_images/otel_collector_with_sh .`
# The image is pushed to harkishen/otel_collector_with_sh and not built during the test.

FROM otel/opentelemetry-collector:0.37.0 as otel

FROM alpine:3.13

RUN apk add bash

ARG USER_UID=10001
USER ${USER_UID}

COPY --from=otel /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/ca-certificates.crt
COPY --from=otel /otelcol /
COPY --from=otel /etc/otel/config.yaml /etc/otel/config.yaml
ENTRYPOINT ["/otelcol"]
CMD ["--config", "/etc/otel/config.yaml"]
EXPOSE 4317 55678 55679